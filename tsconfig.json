{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "declaration": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "**/__tests__/*"],
  "paths": {
    "@src/*": [
      "./src/*"
    ]
  }
}